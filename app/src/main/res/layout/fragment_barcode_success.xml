<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/barcode_success"
    tools:context="factory9.checkinmobile.BarcodeSuccessFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:src="@mipmap/checkin"
        />

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/successText"
        android:layout_marginTop="160dp"
        android:textSize="30sp"
        android:textColor="#555"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/barcode_result"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:textColor="#555"
        android:text="@string/searchBtn"
        />

    <TextView
        android:id="@+id/group_definition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:textAllCaps="true"
        android:textColor="#000"
        android:layout_marginTop="320dp"
        android:textStyle="bold"        />
</FrameLayout>
