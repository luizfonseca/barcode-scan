<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="factory9.checkinmobile.MainFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/coca_trans"
            />

        <TextView
            android:id="@+id/tooltip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/tooltip"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_marginTop="300dp"
            style="@style/WhiteText"
            />



        <EditText
            android:id="@+id/find_guest"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:imeOptions="actionSearch"
            android:imeActionLabel="@string/searchBtn"
            android:layout_below="@+id/tooltip"
            style="@style/SearchField"/>


    </RelativeLayout>



</FrameLayout>
